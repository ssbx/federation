#!/bin/sh

# easy makefile
echo -n '.PHONY: default clean_all

default:
	make -C _BUILD all

clean_all:
	rm -rf _BUILD; rm Makefile

%: 
	make -C _BUILD $@
' > Makefile

git submodule init
git submodule update --init --recursive

# cleanup _BUILD dir if exist
rm -rf _BUILD

# create Unix Makefiles project
mkdir _BUILD && cd _BUILD && cmake ..
